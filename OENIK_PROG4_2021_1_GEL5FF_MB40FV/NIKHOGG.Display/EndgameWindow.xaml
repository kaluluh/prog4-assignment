<Window x:Class="NIKHOGG.Display.EndgameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NIKHOGG.Display"
        mc:Ignorable="d"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Title="EndGameWindow" Height="350" Width="335">
    <Border BorderBrush="Black" BorderThickness="2" CornerRadius="4" Margin="0,0,-31,-226" >
        <Grid>
            <StackPanel Margin="0,44,34,84">
                <TextBlock Text="You win!" TextWrapping="Wrap" FontSize="36" Width="140"/>
                <TextBox x:Name="Player_Name" HorizontalAlignment="Left" Margin="27,30,0,0" Text="Type your name.." TextWrapping="Wrap" VerticalAlignment="Top" Height="30" Width="274" FontSize="20"/>
                <Button x:Name="ExitButton"  Content="Exit"  Height="55" Width="274" Margin="10, 40, 10, 10" Click="ExitButton_Click" FontSize="36" Background="#FFD8D8D4" BorderBrush="#FF464643" FontFamily="Bahnschrift SemiLight" FontWeight="Bold"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
